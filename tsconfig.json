{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es6",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/@types/**/*",
    "src/dev-data/data/import-and-delete.ts",
    "src/eslintrc.ts",
    "src/@types/*.d.ts",
    "src/public/js/mapbox.js"
  ],
  "exclude": ["node_modules"]
}
