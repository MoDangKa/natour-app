{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": [
    "src/**/*.ts",
    "src/@types/**/*",
    "src/dev-data/data/import-and-delete.ts",
    "src/eslintrc.ts",
    "src/@types/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
