.card
    .card__header
        .card__picture
            .card__picture-overlay &nbsp;
            img.card__picture-img(src=`/img/tours/${tour.imageCover}` alt=`${tour.name}`)
        h3.heading-tertiary
            span= tour.name

    .card__details
        h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
        p.card__text= tour.summary
        .card__data
            svg.card__icon
                use(xlink:href='/img/icons.svg#icon-map-pin')
            span= tour && tour.startLocation && tour.startLocation.description ? tour.startLocation.description : 'Unknown Location'

        .card__data
            svg.card__icon
                use(xlink:href='/img/icons.svg#icon-calendar')
            span
                - const date = new Date(tour.startDates[0]).toLocaleString('en-US', { month: 'long', year: 'numeric' });
                = date
        .card__data
            svg.card__icon
                use(xlink:href='/img/icons.svg#icon-flag')
            span= tour && tour.locations ? `${tour.locations.length} stops` : 'No stops'
        .card__data
            svg.card__icon
                use(xlink:href='/img/icons.svg#icon-user')
            span= tour.maxGroupSize ? `${tour.maxGroupSize} people` : 'Group size not specified'

    .card__footer
        p
            span.card__footer-value= `$${tour.price}`
            span.card__footer-text per person
        p.card__ratings
            span.card__footer-value= tour.ratingsAverage ? tour.ratingsAverage.toFixed(1) : 'No rating'
            span.card__footer-text= `rating (${tour.ratingsQuantity || '0'})`
        a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Details
