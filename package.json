{
  "name": "Natours",
  "version": "1.0.0",
  "description": "Learning node, express and mongoDB",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:serve\"",
    "dev:serve": "nodemon -r tsconfig-paths/register ./src/server.ts",
    "alpha": "concurrently \"npm run alpha:serve\"",
    "alpha:serve": "cross-env NODE_ENV=production nodemon -r tsconfig-paths/register ./src/server.ts",
    "clean": "del-cli dist",
    "build": "npm run clean && npm run build:ts && npm run build:assets",
    "build:ts": "tsc",
    "build:assets": "cpx \"src/**/*.{html,json,env}\" dist",
    "prod": "concurrently \"npm run prod:serve\"",
    "prod:serve": "cross-env NODE_ENV=production nodemon -r tsconfig-paths/register ./dist/server.js"
  },
  "author": "Thanaphon Phumthan",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.1.0",
    "mongoose": "^8.4.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.13.0",
    "concurrently": "^8.2.2",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "eslint": "^9.4.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "nodemon": "^3.1.2",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
