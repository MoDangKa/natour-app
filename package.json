{
  "name": "Natours",
  "version": "1.0.0",
  "description": "Learning node, express and mongoDB",
  "source": "public/js/index.js",
  "main": "public/js/bundle.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only ./src/app.ts",
    "start": "cross-env NODE_ENV=production ts-node-dev -r tsconfig-paths/register --respawn --transpile-only ./src/app.ts",
    "clean": "del-cli dist",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,json,html}'",
    "import:dev-data": "ts-node src/dev-data/import-and-delete.ts --import",
    "delete:dev-data": "ts-node src/dev-data/import-and-delete.ts --delete",
    "import:prod-data": "cross-env NODE_ENV=production ts-node src/dev-data/import-and-delete.ts --import",
    "delete:prod-data": "cross-env NODE_ENV=production ts-node src/dev-data/import-and-delete.ts --delete",
    "watch:js": "npx esbuild src/public/js/index.js --bundle --outfile=src/public/js/bundle.js --watch",
    "build:js": "esbuild src/public/js/index.js --bundle --outfile=src/public/js/bundle.js"
  },
  "author": "Thanaphon Phumthan",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "axios": "^1.7.4",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "connect-timeout": "^1.9.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.3.1",
    "express-validator": "^7.1.0",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "jose": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "moment": "^2.30.1",
    "mongoose": "^8.4.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.13",
    "pug": "^3.0.3",
    "serve-favicon": "^2.5.0",
    "sharp": "^0.33.5",
    "slugify": "^1.6.6",
    "stripe": "^16.9.0",
    "validator": "^13.12.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/connect-timeout": "^0.0.39",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/eslint": "^8.56.10",
    "@types/express": "^4.17.21",
    "@types/html-to-text": "^9.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mime-types": "^2.1.4",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.13.0",
    "@types/nodemailer": "^6.4.15",
    "@types/pug": "^2.0.10",
    "@types/serve-favicon": "^2.5.7",
    "@types/validator": "^13.11.10",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "esbuild": "^0.23.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "parcel": "^2.12.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "winston": "^3.14.0"
  },
  "engines": {
    "node": "20.x"
  },
  "repository": "https://github.com/MoDangKa/natour-app.git"
}
