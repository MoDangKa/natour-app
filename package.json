{
  "name": "Natours",
  "version": "1.0.0",
  "description": "Learning node, express and mongoDB",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only ./src/app.ts",
    "alpha": "cross-env NODE_ENV=alpha ts-node-dev -r tsconfig-paths/register --respawn --transpile-only ./src/app.ts",
    "clean": "del-cli dist",
    "build": "npm run clean && npm run build:ts && npm run build:assets",
    "build:ts": "tsc",
    "build:assets": "cpx \"src/**/*.{html,json,env}\" dist",
    "prod": "cross-env NODE_ENV=production node dist/app.js",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,json,html}'",
    "import:tours": "ts-node src/dev-data/import-and-delete.ts --import",
    "delete:tours": "ts-node src/dev-data/import-and-delete.ts --delete"
  },
  "author": "Thanaphon Phumthan",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.1.0",
    "jose": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.1",
    "morgan": "^1.10.0",
    "slugify": "^1.6.6",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/eslint": "^8.56.10",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.13.0",
    "@types/validator": "^13.11.10",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.2",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": "https://github.com/MoDangKa/natour-app.git"
}
