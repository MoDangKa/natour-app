{
  "name": "Natours",
  "version": "1.0.0",
  "description": "Learning node, express and mongoDB",
  "main": "dist/app.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:serve\"",
    "dev:serve": "nodemon -r tsconfig-paths/register ./src/app.ts",
    "alpha": "concurrently \"npm run alpha:serve\"",
    "alpha:serve": "cross-env NODE_ENV=alpha nodemon -r tsconfig-paths/register ./src/app.ts",
    "clean": "del-cli dist",
    "build": "npm run clean && npm run build:ts && npm run build:assets",
    "build:ts": "tsc",
    "build:assets": "cpx \"src/**/*.{html,json,env}\" dist",
    "prod": "concurrently \"npm run prod:serve\"",
    "prod:serve": "cross-env NODE_ENV=production nodemon -r tsconfig-paths/register ./dist/app.js",
    "debug": "ndb ./src/app.ts",
    "import:tours": "nodemon src/utils/import-dev-data.ts --import",
    "delete:tours": "nodemon src/utils/import-dev-data.ts --delete"
  },
  "author": "Thanaphon Phumthan",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.1.0",
    "mongoose": "^8.4.1",
    "morgan": "^1.10.0",
    "slugify": "^1.6.6",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.13.0",
    "@types/validator": "^13.11.10",
    "concurrently": "^8.2.2",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "nodemon": "^3.1.2",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
